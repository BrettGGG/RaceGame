<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        android:alpha="0.5"
        android:background="@color/black"
        android:id="@+id/imgBack" />

    <TextView
        android:text="How to play :"
        android:textSize="30sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:id="@+id/tv1" />

    <TextView
        android:text="       Press  left and right to control red car to avoid the other cars. Stay alive for as long as possible to get high score! (The car will come from the top to the bottom with different speed and value. )"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/tv2" />

    <Button
        android:text="  Back  "
        android:textSize="20sp"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:background="@drawable/round_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/btnBack" />


</RelativeLayout>